##
## ~/.mailfilter
##
DEFAULT="${HOME}/Maildir"
TYPE="maildir"
logfile "${HOME}/.mailfilter.log"

MAILDIRMAKE="/usr/bin/maildirmake"
REFORMAIL="/usr/bin/reformail"
`${MAILDIRMAKE} -f .Z-Spamassassin "$DEFAULT"`

## braze github
if ( /^Subject:.*Appboy.*/:h )
  to ${DEFAULT}/.Brazegit

## trap spam
if ( /^X-MD-SPAM: YES/ )
  to ${DEFAULT}/.Z-Spamtrap
