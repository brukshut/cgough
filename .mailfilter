##
## ~/.mailfilter
##
DEFAULT="${HOME}/Maildir/"
TYPE="maildir"
logfile "${HOME}/.mailfilter.log"

MAILDIRMAKE="/usr/bin/maildirmake"
REFORMAIL="/usr/bin/reformail"
FOLDERS="$DEFAULT/."
SPAMTRAP="${FOLDERS}Z-Spamtrap"

## make sure the spam directory exists
${MAILDIRMAKE} -f Z-Spamtrap "$DEFAULT"

## trap spam
if ( /^X-MD-SPAM: YES/ )
  to $SPAMTRAP
